<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:PoViEmu.UI.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:views="clr-namespace:PoViEmu.UI.Views"
        mc:Ignorable="d" 
        d:DesignWidth="1200" d:DesignHeight="850"
        Width="1200" Height="850"
        x:Class="PoViEmu.UI.Views.MainWindow"
        x:DataType="vm:MainViewModel"
        Icon="/Assets/app-logo.ico"
        Title="Experimental"
        Loaded="Control_OnLoaded">

    <Design.DataContext>
        <vm:MainViewModel/>
    </Design.DataContext>

    <Grid ColumnDefinitions="*, 4, *"
          RowDefinitions="*,*">
        <views:RegHitView Grid.Row="0" Grid.Column="0"
                          HorizontalAlignment="Center" 
                          VerticalAlignment="Center" />
        <views:RawMemView Grid.Row="1" Grid.Column="0" />
        <GridSplitter Grid.Row="0" Grid.Column="1" 
                      Width="10" Background="Black" 
                      ResizeDirection="Columns" />
        <views:RegIntView Grid.Row="0" Grid.Column="2"
                          HorizontalAlignment="Center" 
                          VerticalAlignment="Center" />
        <views:UnassView Grid.Row="1" Grid.Column="2" />
    </Grid>
    
</Window>
