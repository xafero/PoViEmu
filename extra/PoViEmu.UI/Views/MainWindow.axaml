<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:PoViEmu.UI.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:sh3="clr-namespace:PoViEmu.UI.Views.SH3"
        xmlns:i86="clr-namespace:PoViEmu.UI.Views.I186"
        xmlns:views="clr-namespace:PoViEmu.UI.Views"
        mc:Ignorable="d" 
        d:DesignWidth="1200" d:DesignHeight="450"
        Width="1200" Height="450"
        x:Class="PoViEmu.UI.Views.MainWindow"
        x:DataType="vm:MainViewModel"
        Icon="/Assets/app-logo.ico"
        Title="Experimental"
        Loaded="Control_OnLoaded">

    <Design.DataContext>
        <vm:MainViewModel/>
    </Design.DataContext>

    <Grid ColumnDefinitions="*, 4, *">
        <!-- 
        <sh3:RegisterView Grid.Row="0" Grid.Column="0"
                          HorizontalAlignment="Center" VerticalAlignment="Center" />
        -->
        <views:RawMemView Grid.Row="0" Grid.Column="0" />
        <GridSplitter Grid.Row="0" Grid.Column="1" Width="10"
                      Background="Black" ResizeDirection="Columns" />
        <!-- 
        <i86:RegisterView Grid.Row="0" Grid.Column="2"
                          HorizontalAlignment="Center" VerticalAlignment="Center" />
        -->
        <views:UnassView Grid.Row="0" Grid.Column="2" />
    </Grid>
    
</Window>
